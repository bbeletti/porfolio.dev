---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Header from '../components/Header.astro';
import '@fontsource-variable/onest/';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
	</head>
	<body class="dark:bg-[#0a0a0a] bg-[#d0d0d0]">
		<div class="absolute top-0 z-[-2] min-h-full min-w-full 
		bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.5),rgba(255,255,255,0.8))]
		dark:bg-neutral-950 dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
		<Header />
		
		<slot />
		
	</body>
	<footer class="px-4">
		<Footer/>
	</footer>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
		
	}
	html {
		font-family: "Onest Variable", system-ui, sans-serif;
	}
	body{
		display: flex;
		flex-direction: column;
		height: 100vh;
	}
	@media(prefers-reduced-motion: reduce){
		html{
			scroll-behavior: auto;
		}
	}
</style>
